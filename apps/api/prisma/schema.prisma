  PENDING
  PARSING
  MAPPED
  VALIDATING
  IMPORTING
  COMPLETED
  FAILED
  CANCELLED
}

enum ImportType {
  USERS
  LOANS
  CONTRIBUTIONS
  GUARANTEES
  PAYMENTS
}

enum ImportFileType {
  CSV
  EXCEL
}

enum ValidationSeverity {
  ERROR
  WARNING
  INFO
}

enum CalendarEventType {
  LOAN_REPAYMENT
  DEPOSIT_WITHDRAWAL
  COMMITTEE_MEETING
  JEWISH_HOLIDAY
  CUSTOM_EVENT
  SYSTEM_REMINDER
  APPROVAL_DEADLINE
  PAYMENT_DUE
  DOCUMENT_EXPIRY
  CAMPAIGN_EVENT
}

enum CalendarEventStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  POSTPONED
  IN_PROGRESS
}

enum CalendarEventPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

model ImportSession {
  id                String           @id @default(cuid())
  
  // Session details
  sessionNumber     String           @unique
  userId            String
  user              User             @relation("ImportSessions", fields: [userId], references: [id])
  
  // File information
  fileName          String
  originalName      String
  fileSize          Int
  fileType          ImportFileType
  filePath          String
  fileUrl           String?
  
  // Import configuration
  importType        ImportType
  status            ImportStatus     @default(PENDING)
  hasHeaders        Boolean          @default(true)
  delimiter         String?          @default(",")
  encoding          String           @default("utf8")
  
  // Processing info
  totalRows         Int              @default(0)
  processedRows     Int              @default(0)
  successRows       Int              @default(0)
  failedRows        Int              @default(0)
  skippedRows       Int              @default(0)
  
  // Timing
  startedAt         DateTime?
  completedAt       DateTime?
  processingTime    Int?             // in milliseconds
  
  // Configuration and results
  columnMapping     Json?            // Column to field mapping
  validationRules   Json?            // Applied validation rules
  errorReport       Json?            // Detailed error report
  successReport     Json?            // Success summary
  
  // Rollback capability
  canRollback       Boolean          @default(false)
  rollbackData      Json?            // Data needed for rollback
  rolledBackAt      DateTime?
  rolledBackBy      String?
  
  // Relations
  templateId        String?
  template          ImportTemplate?  @relation(fields: [templateId], references: [id])
  validations       ImportValidation[]
  
  // Metadata
  metadata          Json?
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([importType])
  @@index([createdAt])
  @@index([sessionNumber])
}

model ImportTemplate {
  id                String           @id @default(cuid())
  
  // Template details
  name              String
  description       String?
  importType        ImportType
  isDefault         Boolean          @default(false)
  isActive          Boolean          @default(true)
  
  // Template configuration
  columnMapping     Json             // Default column to field mapping
  validationRules   Json?            // Default validation rules
  transformRules    Json?            // Data transformation rules
  
  // Metadata
  usageCount        Int              @default(0)
  lastUsedAt        DateTime?
  
  // Creator
  createdBy         String
  creator           User             @relation("CreatedTemplates", fields: [createdBy], references: [id])
  
  // Relations
  sessions          ImportSession[]
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  @@index([importType])
  @@index([isActive])
  @@index([createdBy])
}

model ImportValidation {
  id                String           @id @default(cuid())
  sessionId         String
  session           ImportSession    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  // Validation details
  rowNumber         Int
  columnName        String?
  fieldName         String?
  severity          ValidationSeverity
  
  // Error information
  errorCode         String
  errorMessage      String
  expectedValue     String?
  actualValue       String?
  
  // Suggestions
  suggestedFix      String?
  canAutoFix        Boolean          @default(false)
  wasAutoFixed      Boolean          @default(false)
  
  // Context
  rowData           Json?            // Full row data for context
  
  createdAt         DateTime         @default(now())
  
  @@index([sessionId])
  @@index([severity])
  @@index([errorCode])
}

// Depositor Withdrawal Management Models
enum WithdrawalStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  PROCESSING
  COMPLETED
  CANCELLED
  FAILED
}

enum ApprovalMode {
  AUTOMATIC
  MANUAL
  COMMITTEE
}

model Deposit {
  id                String           @id @default(cuid())
  depositNumber     String           @unique
  depositorId       String
  depositor         User             @relation("DepositorDeposits", fields: [depositorId], references: [id])
  
  // Deposit details
  amount            Decimal          @db.Money
  currency          String           @default("ILS")
  type              String           // TERM, DEMAND, SAVINGS, EMERGENCY_FUND
  
  // Dates
  depositDate       DateTime         @default(now())
  maturityDate      DateTime?        // For term deposits
  
  // Interest and terms
  interestRate      Float?           @default(0) // Should be 0 for Halakhic compliance
  term              Int?             // Term in months
  
  // Status
  isActive          Boolean          @default(true)
  currentBalance    Decimal          @db.Money
  
  // Relations
  withdrawalRequests WithdrawalRequest[]
  treasuryFlows     TreasuryFlow[]   @relation("DepositFlows")
  documents         Document[]       @relation("DepositDocuments")
  
  // Metadata
  description       String?
  metadata          Json?
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  @@index([depositorId])
  @@index([depositNumber])
  @@index([isActive])
  @@index([depositDate])
}

model WithdrawalRequest {
  id                String           @id @default(cuid())
  requestNumber     String           @unique
  depositId         String
  deposit           Deposit          @relation(fields: [depositId], references: [id])
  depositorId       String
  depositor         User             @relation("DepositorWithdrawals", fields: [depositorId], references: [id])
  
  // Request details
  amount            Decimal          @db.Money
  reason            String           @db.Text
  reasonCategory    String?          // EMERGENCY, PERSONAL, BUSINESS, OTHER
  urgency           String           @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  
  // Dates
  requestDate       DateTime         @default(now())
  plannedDate       DateTime?        // When the depositor needs the funds
  approvalDate      DateTime?
  rejectionDate     DateTime?
  processingDate    DateTime?
  completedDate     DateTime?
  
  // Status and approval
  status            WithdrawalStatus @default(PENDING)
  approvalMode      ApprovalMode     @default(MANUAL)
  
  // Approval details
  approvedBy        String?          // ID of the approver
  approver          User?            @relation("ApprovedWithdrawals", fields: [approvedBy], references: [id])
  approvalComments  String?          @db.Text
  rejectedBy        String?          // ID of the rejecter
  rejecter          User?            @relation("RejectedWithdrawals", fields: [rejectedBy], references: [id])
  rejectionReason   String?          @db.Text
  
  // Payment details
  paymentMethod     PaymentMethod?
  bankDetails       Json?            // Bank account details for transfer
  transactionRef    String?          // Reference when processed
  
  // Treasury impact
  treasuryImpact    Json?            // Impact analysis on cash flow
  requiresApproval  Boolean          @default(true)
  autoApproved      Boolean          @default(false)
  
  // Relations
  documents         Document[]       @relation("WithdrawalDocuments")
  notifications     Notification[]   @relation("WithdrawalNotifications")
  auditLogs         AuditLog[]       @relation("WithdrawalAuditLogs")
  treasuryFlows     TreasuryFlow[]   @relation("WithdrawalFlows")
  calendarEvents    CalendarEvent[]  @relation("CalendarWithdrawalEvents")
  
  // Metadata
  metadata          Json?
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  @@index([depositId])
  @@index([depositorId])
  @@index([status])
  @@index([requestNumber])
  @@index([requestDate])
  @@index([plannedDate])
  @@index([approvalMode])
}

model CalendarEvent {
  id                String           @id @default(cuid())
  
  // Basic event information
  title             String
  description       String?          @db.Text
  type              CalendarEventType
  status            CalendarEventStatus @default(SCHEDULED)
  priority          CalendarEventPriority @default(NORMAL)
  
  // Timing
  startDate         DateTime
  endDate           DateTime?
  allDay            Boolean          @default(false)
  timezone          String?          @default("Asia/Jerusalem")
  
  // Recurrence using RRULE format
  isRecurring       Boolean          @default(false)
  recurrenceRule    String?          // RRULE string for recurring events
  recurrenceId      String?          // Parent event ID for recurring instances
  recurrenceDate    DateTime?        // Specific date for this instance
  isRecurrenceException Boolean       @default(false)
  
  // Hebrew calendar support
  isHebrewDate      Boolean          @default(false)
  hebrewDate        String?          // Hebrew date representation
  hebrewYear        Int?
  hebrewMonth       String?          // Tishrei, Cheshvan, etc.
  hebrewDay         Int?
  
  // Related entities
  loanId            String?
  loan              Loan?            @relation("CalendarLoanEvents", fields: [loanId], references: [id])
  userId            String?          // Assigned user or creator
  user              User?            @relation("UserCalendarEvents", fields: [userId], references: [id])
  withdrawalId      String?
  withdrawal        WithdrawalRequest? @relation("CalendarWithdrawalEvents", fields: [withdrawalId], references: [id])
  campaignId        String?
  campaign          Campaign?        @relation("CalendarCampaignEvents", fields: [campaignId], references: [id])
  
  // Notification and reminders
  hasReminders      Boolean          @default(false)
  reminderMinutes   Int[]            @default([]) // Array of reminder times in minutes before event
  lastReminderSent  DateTime?
  
  // Location and attendees
  location          String?
  locationUrl       String?          // Virtual meeting URL
  attendees         String[]         @default([]) // Array of user IDs or email addresses
  
  // External calendar sync
  externalId        String?          // ID in external calendar system (Google, Outlook)
  syncProvider      String?          // google, outlook, caldav
  lastSyncedAt      DateTime?
  syncHash          String?          // Hash to detect changes
  
  // Visual customization
  color             String?          @default("#3b82f6") // Hex color code
  backgroundColor   String?
  textColor         String?
  
  // Metadata
  isPublic          Boolean          @default(false) // Visible to all users vs. private
  isSystemGenerated Boolean          @default(false) // Generated by system vs. manually created
  sourceType        String?          // MANUAL, LOAN_REPAYMENT, WITHDRAWAL, etc.
  metadata          Json?            // Additional event-specific data
  
  // Audit fields
  createdBy         String?
  creator           User?            @relation("CreatedCalendarEvents", fields: [createdBy], references: [id])
  updatedBy         String?
  updater           User?            @relation("UpdatedCalendarEvents", fields: [updatedBy], references: [id])
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  @@index([startDate])
  @@index([endDate])
  @@index([type])
  @@index([status])
  @@index([priority])
  @@index([loanId])
  @@index([userId])
  @@index([withdrawalId])
  @@index([campaignId])
  @@index([isRecurring])
  @@index([recurrenceId])
  @@index([isHebrewDate])
  @@index([isSystemGenerated])
  @@index([createdBy])
}

// Dashboard models
model UserDashboard {
  id                String           @id @default(cuid())
  userId            String
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name              String
  description       String?
  theme             String           @default("light") // light, dark, auto
  
  // Layout configuration
  layout            Json             // Grid layout configuration
  
  // Dashboard widgets
  widgets           DashboardWidget[]
  
  // Preferences
  preferences       Json             // autoRefresh, refreshInterval, compactMode, etc.
  
  // Filters
  filters           Json?            // Default filters for data
  
  // Quick actions
  quickActions      Json?            // Array of quick action configurations
  
  // Template
  templateId        String?          // If based on a template
  
  // Status
  isDefault         Boolean          @default(false)
  isActive          Boolean          @default(true)
  isShared          Boolean          @default(false) // Shared with team
  
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  
  @@unique([userId, isDefault])
  @@index([userId])
}

model DashboardWidget {
  id                String           @id @default(cuid())
  dashboardId       String
  dashboard         UserDashboard    @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  
  type              String           // METRIC, CHART, TABLE, LIST, etc.
