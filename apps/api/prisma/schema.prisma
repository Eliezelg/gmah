  subtitle          String?
  description       String?
  icon              String?
  
  // Position and size
  position          Json             // {x, y, w, h}
  size              String           // SMALL, MEDIUM, LARGE, XLARGE, FULL
  
  // Data configuration
  dataSource        String           // API endpoint or data key
  dataConfig        Json?            // Query params, filters, aggregations
  
  // Display configuration
  displayConfig     Json?            // Chart type, colors, etc.
  
  // Interaction configuration
  interactionConfig Json?            // Clickable, draggable, resizable, etc.
  
  // Refresh
  refreshInterval   Int?             // In seconds
  autoRefresh       Boolean          @default(false)
  
  // Status
  isVisible         Boolean          @default(true)
  isLocked          Boolean          @default(false) // Cannot be moved/resized
  isCollapsed       Boolean          @default(false)
  
  // Permissions
