# =============================================
# GMAH Platform - Configuration d'environnement
# =============================================
# Copier ce fichier en .env et remplir les valeurs
# cp .env.example .env

# =============================================
# DATABASE
# =============================================
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/gmah_db?schema=public"

# Multi-tenant configuration
MULTI_TENANT_MODE="false"  # Set to "true" to enable multi-tenant mode
DEFAULT_TENANT="default"    # Default tenant for development
DATABASE_URL_BASE="postgresql://postgres:postgres@localhost:5432"  # Base URL for multi-tenant
MASTER_DB="gmah_master"    # Master database for organization metadata

# =============================================
# JWT & SECURITY
# =============================================
# JWT Secrets - Générer avec: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# =============================================
# APPLICATION
# =============================================
NODE_ENV="development"
PORT=3333
FRONTEND_URL="http://localhost:3001"

# Backend API URL (pour le frontend)
NEXT_PUBLIC_API_URL="http://localhost:3333"
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# =============================================
# EMAIL SERVICE (RESEND)
# =============================================
# Obtenir la clé sur: https://resend.com
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"

# 2FA Configuration
TWO_FACTOR_APP_NAME="GMAH Platform"

# Session Configuration
SESSION_SECRET="your-session-secret"

# API Configuration
API_PREFIX="api"
API_VERSION="v1"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
THROTTLE_TTL="60000"
THROTTLE_LIMIT="100"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Sentry (Optional - for error tracking)
SENTRY_DSN=""

# Hebrew Calendar API (Optional)
HEBREW_CAL_API_KEY=""

# Banking API (Optional - for reconciliation)
BANKING_API_KEY=""
BANKING_API_URL=""